{
    "name": "golf-os-ui",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "golf-os",
    "sourceRoot": "apps/golf-os-ui/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/golf-os-ui",
                "browser": "apps/golf-os-ui/src/main.ts",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/golf-os-ui/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/golf-os-ui/public"
                    }
                ],
                "styles": ["apps/golf-os-ui/src/styles/global.scss"]
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@angular/build:dev-server",
            "options": {
                "port": 4200,
                "proxyConfig": "apps/golf-os-ui/proxy.conf.json"
            },
            "configurations": {
                "production": {
                    "buildTarget": "golf-os-ui:build:production"
                },
                "development": {
                    "buildTarget": "golf-os-ui:build:development"
                }
            },
            "defaultConfiguration": "development",
            "dependsOn": ["golf-os-ui:graphql-codegen"]
        },
        "extract-i18n": {
            "executor": "@angular/build:extract-i18n",
            "options": {
                "buildTarget": "golf-os-ui:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/golf-os-ui/jest.config.ts"
            }
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "golf-os-ui:build",
                "port": 4200,
                "staticFilePath": "dist/apps/golf-os-ui/browser",
                "spa": true
            }
        },
        "graphql-codegen": {
            "command": "graphql-codegen --config codegen.ts --watch",
            "continuous": true
        }
    }
}
